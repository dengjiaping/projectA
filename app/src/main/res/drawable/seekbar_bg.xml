<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

<item android:id="@android:id/background" android:height="4px" android:gravity="center_vertical">
    <shape>
        <solid android:color="#b8b8b8"/>
    </shape>
</item>

<item android:id="@android:id/progress" android:height="4px" android:gravity="center_vertical">
    <clip>
        <shape>
            <solid android:color="#03b5e3"/>
        </shape>
    </clip>
</item>

<item android:id="@android:id/secondaryProgress" android:height="4px" android:gravity="center_vertical">
    <clip>
        <shape>
            <solid android:color="#b8b8b8"/>
        </shape>
    </clip>
</item>

</layer-list>