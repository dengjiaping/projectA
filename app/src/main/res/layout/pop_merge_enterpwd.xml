<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="540px"
        android:layout_height="552px"
        android:background="@drawable/bg_createroom">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="70px"
                android:text="输入密码"
                android:textColor="#333"
                android:textSize="38px" />

            <com.hzease.tomeet.widget.CircleImageView
                android:id="@+id/civ_accountavatar_merge_pop"
                android:layout_width="78px"
                android:layout_height="78px"
                android:layout_marginTop="40px" />

            <TextView
                android:id="@+id/tv_nickname_merge_pop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14px"
                android:textColor="#333"
                android:textSize="30px" />

            <EditText
                android:id="@+id/et_password_merge_pop"
                style="@style/EditText_Style"
                android:layout_width="360px"
                android:layout_height="wrap_content"
                android:hint="该账号的登录密码"
                android:inputType="textPassword"
                android:lines="1"
                android:paddingBottom="28px"
                android:paddingLeft="3px"
                android:paddingTop="34px"
                android:textColor="@color/normal_editText"
                android:textColorHint="#cbcdcb"
                android:textSize="36px" />

            <TextView
                android:id="@+id/tv_line"
                style="@style/Line_BG"
                android:layout_width="360px"
                android:layout_height="1px"
                android:background="#d3d3d3" />

            <Button
                android:id="@+id/bt_merge_sure"
                style="@style/Button_Success"
                android:layout_width="360px"
                android:layout_height="80px"
                android:layout_marginTop="50px"
                android:text="确定" />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30px"
            android:layout_marginTop="30px"
            android:src="@drawable/pop_cancel" />
    </RelativeLayout>
</com.zhy.autolayout.AutoLinearLayout>