        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/civ_avatar_bg_item_member_gamechatroom_fmt"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/civ_avatar_bg_item_member_gamechatroom_fmt"
