<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    >
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="550px"
        android:layout_height="402px"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:background="@drawable/bg_createroom"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="98px"
            android:gravity="center"
            android:text="房间信息"
            android:background="@drawable/bg_createroom_title"
            android:textColor="#fff"
            android:textSize="32px"
            />
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="40px"
            android:paddingRight="40px"
            android:orientation="vertical"
            android:gravity="center"
            >
            <TextView
                android:id="@+id/tv_roominfo_starttime_pop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="30px"
                android:textColor="#333"
                android:text="Notice"
                />
            <TextView
                android:id="@+id/tv_roominfo_endtime_pop"
                android:layout_marginTop="10px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="30px"
                android:textColor="#333"
                android:text="结束时间"
                />
            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10px"
                >
                <TextView
                    android:id="@+id/tv_roominfo_place_pop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="30px"
                    android:textColor="#333"
                    android:text="活动地点"
                    android:layout_centerVertical="true"
                    />
                <ImageView
                    android:id="@+id/iv_roominfo_location_pop"
                    android:layout_width="33px"
                    android:layout_height="44px"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/market"
                    />
            </com.zhy.autolayout.AutoRelativeLayout>

            <TextView
                android:id="@+id/tv_roominfo_money_pop"
                android:layout_marginTop="10px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="30px"
                android:textColor="#333"
                android:text="保证金"
                />
            <TextView
                android:id="@+id/tv_roominfo_disc_pop"
                android:layout_marginTop="10px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="30px"
                android:textColor="#333"
                android:text="活动介绍"
                />
        </com.zhy.autolayout.AutoLinearLayout>

    </com.zhy.autolayout.AutoLinearLayout>
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_marginTop="40px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        >
        <Button
            android:id="@+id/cancelforowner"
            android:layout_width="220px"
            android:layout_height="80px"
            android:background="@drawable/createroom_cancel"
            android:text="关闭"
            android:textColor="#333"
            />
        <Button
            android:id="@+id/moditfyroominfo"
            android:layout_marginLeft="30px"
            android:layout_width="220px"
            android:layout_height="80px"
            android:background="@drawable/createroom_success"
            android:text="修改"
            android:textColor="#fff"
            />
    </com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoLinearLayout>