<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    >
    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="558px"
        android:layout_height="498px"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:background="@drawable/bg_createroom"
        >
        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="98px"
            android:gravity="center"
            android:text="确认付款"
            android:background="@drawable/bg_createroom_title"
            android:textColor="#fff"
            android:textSize="32px"
            />
        <TextView
            android:id="@+id/tv_prop_vip_price"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40px"
            android:textSize="44px"
            android:textColor="#333"
            android:text="¥18.00"
            />
        <TextView
            android:id="@+id/tv_buy_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="26px"
            android:textColor="#808080"
            android:layout_below="@+id/tv_prop_vip_price"
            android:layout_marginTop="40px"
            android:layout_marginLeft="34px"
            android:text="付款方式"
            />
        <TextView
            style="@style/Line_BG"
            android:layout_below="@+id/arl_wechat"
            android:layout_width="490px"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="24px"
            />
        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/arl_ali_pay"
            android:layout_below="@+id/arl_wechat"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="48px"
            android:layout_width="490px"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:id="@+id/iv_alipay"
                android:layout_width="50px"
                android:layout_height="50px"
                android:src="@drawable/alipay"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="支付宝"
                android:layout_toEndOf="@+id/iv_alipay"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30px"
                android:textSize="28px"
                android:textColor="#333"
                />

        </com.zhy.autolayout.AutoRelativeLayout>
        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/arl_wechat"
            android:layout_below="@+id/tv_buy_mode"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40px"
            android:layout_width="490px"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:id="@+id/iv_wechat"
                android:layout_width="50px"
                android:layout_height="50px"
                android:src="@drawable/wechat_pay"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="微信支付"
                android:layout_toEndOf="@+id/iv_wechat"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30px"
                android:textSize="28px"
                android:textColor="#333"
                />
        </com.zhy.autolayout.AutoRelativeLayout>
    </com.zhy.autolayout.AutoRelativeLayout>
</com.zhy.autolayout.AutoLinearLayout>