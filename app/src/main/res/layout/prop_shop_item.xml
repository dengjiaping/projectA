<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:layout_width="380px"
        android:layout_height="125px"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:gravity="center_vertical">

        <RelativeLayout
            android:layout_width="100px"
            android:layout_height="100px"
            android:layout_marginLeft="40px"

            >

            <ImageView
                android:id="@+id/iv_prop_shop_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/watch_movie_propshop" />

            <ImageView
                android:id="@+id/iv_prop_shop_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@drawable/shop_hot" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30px"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_prop_shop_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="小纸条"
                android:textColor="#333"
                android:textSize="30px" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16px"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/iv_prop_shop_ismoney"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/currencyv2" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_prop_shop_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5"
                    android:textColor="#267805"
                    android:textSize="26px" />

                <TextView
                    android:id="@+id/tv_prop_shop_issale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10px"
                    android:textColor="#267805"
                    android:textSize="18px"
                    android:text="222"
                    />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</com.zhy.autolayout.AutoRelativeLayout>