<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="130px"
        android:background="#fafbfd"
        android:id="@+id/textView9"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="忘记密码"
        android:textSize="36px"
        android:paddingTop="68px"
        android:gravity="center_horizontal"/>
    <EditText
        android:id="@+id/et_forgetpwd_phone_fmt"
        android:layout_width="match_parent"
        android:layout_height="98px"
        android:background="@drawable/edittextrectangle"
        android:hint="手机号"
        android:paddingLeft="24px"
        android:textColor="#b8b8b8"
        android:layout_below="@+id/textView9"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/view4line"
        android:id="@+id/line"
        android:layout_below="@+id/textView9"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="99px"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="98px"
        android:background="@drawable/edittextrectangle"
        android:hint="验证码"
        android:paddingLeft="24px"
        android:textColor="#b8b8b8"
        android:id="@+id/et_forgetpwd_pwd_fmt"
        android:layout_below="@+id/line"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/view4line"
        android:id="@+id/line2"
        android:layout_marginTop="130px"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="98px"
        android:textSize="32px"
        android:text="获取验证码"
        android:textColor="#ff6766"
        android:id="@+id/tv_forgetpwd_getsmscode_fmt"
        android:layout_alignBaseline="@+id/et_forgetpwd_pwd_fmt"
        android:layout_alignBottom="@+id/et_forgetpwd_pwd_fmt"
        android:layout_alignRight="@+id/button"
        android:layout_alignEnd="@+id/button" />
    <Button
        android:layout_width="702px"
        android:layout_height="88px"
        android:background="@drawable/edittextrectanglenext"
        android:text="下一步"
        android:textSize="34px"
        android:textColor="#fff"
        android:id="@+id/button"
        android:layout_below="@+id/et_forgetpwd_pwd_fmt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40px" />

</RelativeLayout>