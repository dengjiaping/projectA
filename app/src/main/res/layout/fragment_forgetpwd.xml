<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        style="@style/Fragment_Head"
        android:id="@+id/textView9"
        android:text="忘记密码" />
    <EditText
        style="@style/EditText_Style"
        android:id="@+id/et_forgetpwd_phone_fmt"
        android:hint="手机号"
        android:paddingLeft="24px"
        android:layout_below="@+id/textView9"
        />
    <TextView
        style="@style/Line_BG"
        android:id="@+id/line"
        android:layout_below="@+id/textView9"
        android:layout_marginTop="99px"/>
    <EditText
        style="@style/EditText_Style"
        android:hint="验证码"
        android:paddingLeft="24px"
        android:id="@+id/et_forgetpwd_pwd_fmt"
        android:layout_below="@+id/line"
        />
    <TextView
        style="@style/Line_BG"
        android:id="@+id/line2"
        android:layout_marginTop="130px"
        />
    <TextView
        style="@style/Line_BG"
        android:id="@+id/line3"
        android:layout_below="@+id/et_forgetpwd_pwd_fmt"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="98px"
        android:textSize="32px"
        android:text="获取验证码"
        android:textColor="#ff6766"
        android:id="@+id/tv_forgetpwd_getsmscode_fmt"
        android:layout_alignBaseline="@+id/et_forgetpwd_pwd_fmt"
        android:layout_alignBottom="@+id/et_forgetpwd_pwd_fmt"
        android:layout_alignRight="@+id/bt_forgetpwd_next_fmt"
        android:layout_alignEnd="@+id/bt_forgetpwd_next_fmt" />
    <Button
        style="@style/Button_Success"
        android:text="下一步"
        android:id="@+id/bt_forgetpwd_next_fmt"
        android:layout_below="@+id/et_forgetpwd_pwd_fmt"
        android:layout_marginTop="40px" />
</RelativeLayout>