<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="#fff"
    >
    <TextView
        style="@style/Fragment_Head"
        android:text="找回密码" />
    <EditText
        android:id="@+id/et_phone_number_findpwd_fmt"
        style="@style/EditText_Style"
        android:layout_width="460px"
        android:layout_height="wrap_content"
        android:layout_marginTop="306px"
        android:hint="手机号"
        android:paddingLeft="3px"
        android:textSize="36px"
        android:lines="1"
        android:maxLength="11"
        android:inputType="phone"
        />

    <TextView
        style="@style/Line_BG"
        android:layout_width="460px"
        android:layout_height="1px"
        android:layout_marginTop="28px" />
    <RelativeLayout
        android:layout_width="270px"
        android:layout_height="92px"
        android:background="@drawable/shape_button_bg"
        android:layout_marginTop="50px"
        android:gravity="center"
        >
        <Button
            android:id="@+id/bt_findpwd_next_fmt"
            android:layout_width="260px"
            android:layout_height="82px"
            android:background="@drawable/selector_login_button_success"
            android:padding="8px"
            android:text="下一步"
            android:textColor="#fff"
            />
    </RelativeLayout>
</com.zhy.autolayout.AutoLinearLayout>