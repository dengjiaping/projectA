<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f3f5f9"
    android:orientation="vertical">

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView22"
            style="@style/Fragment_Head"
            android:text="实名认证" />

        <TextView
            style="@style/Line_BG"
            android:layout_above="@+id/et_me_realname_fmt" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24px"
            android:layout_marginLeft="24px"
            android:layout_marginRight="24px"
            android:layout_marginTop="30px"
            android:text="用户需要使用有效的身份证件进行实名认证，确保资金安全（提现只能提现到实名认证帐号），该信息仅用于实名注册不会泄露于任何第三方"
            android:textColor="#808080"
            android:textSize="28px" />
        <TextView
            style="@style/Line_BG" />
        <EditText
            android:id="@+id/et_me_realname_fmt"
            android:layout_width="match_parent"
            android:layout_height="98px"
            android:layout_below="@+id/textView22"
            android:background="@drawable/editsharp"
            android:hint="真实姓名"
            android:paddingLeft="24px" />

        <TextView
            android:id="@+id/line6"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignBottom="@+id/et_me_realname_fmt"
            android:background="@drawable/view4line" />

        <EditText
            android:id="@+id/et_me_IDCard_fmt"
            android:layout_width="match_parent"
            android:layout_height="98px"
            android:layout_below="@+id/et_me_realname_fmt"
            android:background="@drawable/editsharp"
            android:hint="身份证号"
            android:paddingLeft="24px" />

        <TextView
            android:id="@+id/line7"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/et_me_IDCard_fmt"
            android:background="@drawable/view4line" />

    </com.zhy.autolayout.AutoLinearLayout>

    <TextView
        style="@style/Line_BG" />
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="114px"
        android:gravity="center"
        android:background="#fff"
        android:orientation="vertical"
        >

    <Button
        android:id="@+id/bt_me_submit_fmt"
        android:layout_width="702px"
        android:layout_height="88px"
        android:background="@drawable/mywallet_push"
        android:text="提交"
        android:textColor="#fff"
        android:textSize="34px"
        />
    </com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoLinearLayout>