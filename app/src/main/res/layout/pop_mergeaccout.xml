<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="558px"
        android:layout_height="788px"
        android:background="@drawable/bg_createroom"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="390px"
            android:layout_height="wrap_content"
            android:layout_marginTop="70px"
            android:text="该第三方账号已被绑定，您可以合并两个账号或登录另一个账号解除绑定"
            android:textColor="#333"
            android:textSize="30px" />

        <TextView
            android:layout_width="390px"
            android:layout_height="wrap_content"
            android:layout_marginTop="50px"
            android:text="如要合并请选择一个作为主账号，另一个账号将被删除，保证金等数据合并入您选择的账号"
            android:textColor="#808080"
            android:textSize="26px" />

        <RelativeLayout
            android:layout_width="390px"
            android:layout_height="wrap_content"
            android:layout_marginTop="30px">

            <com.hzease.tomeet.widget.CircleImageView
                android:id="@+id/civ_head_1"
                android:layout_width="70px"
                android:layout_height="70px" />

            <TextView
                android:id="@+id/tv_nickname_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                android:layout_toRightOf="@+id/civ_head_1"
                android:textColor="#333"
                android:textSize="30px" />

            <CheckBox
                android:id="@+id/cb_1"
                android:layout_width="44px"
                android:layout_height="44px"
                android:layout_alignParentRight="true"
                android:background="@drawable/selector_merge_check"
                android:button="@null" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="30px"
            android:layout_width="390px"
            android:layout_height="wrap_content">
            <com.hzease.tomeet.widget.CircleImageView
                android:id="@+id/civ_head_2"
                android:layout_width="70px"
                android:layout_height="70px" />
            <TextView
                android:id="@+id/tv_nickname_2"
                android:layout_toRightOf="@+id/civ_head_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                android:textSize="30px"
                android:textColor="#333"
                />
            <CheckBox
                android:id="@+id/cb_2"
                android:layout_alignParentRight="true"
                android:layout_width="44px"
                android:layout_height="44px"
                android:button="@null"
                android:background="@drawable/selector_merge_check"
                />
        </RelativeLayout>
        <Button
            android:layout_marginTop="50px"
            android:id="@+id/bt_marge"
            android:layout_width="390px"
            android:layout_height="80px"
            android:background="@drawable/merge_button"
            android:text="确定，合并后不可撤销"
            android:textColor="#fff"
            android:textSize="30px"
            />
        <Button
            android:id="@+id/bt_cancel"
            android:layout_width="390px"
            android:layout_height="80px"
            android:layout_marginTop="30px"
            android:background="@drawable/createroom_cancel"
            android:text="取消"
            android:textColor="#fff"
            android:textSize="30px"
            />
    </LinearLayout>
</com.zhy.autolayout.AutoLinearLayout>