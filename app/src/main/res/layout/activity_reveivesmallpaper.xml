<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/arl_reciverpaper_view"
    >
    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/arl_smallpaper_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/smallpaper_bg"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/imageView3" />
        <ImageView
            android:id="@+id/iv_receive_open_pop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/smallpaper_open"
            android:layout_centerInParent="true"
            />
        <ImageView
            android:id="@+id/iv_receive_cancel_pop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/smallpaper_cancel"
            android:layout_above="@+id/imageView3"
            android:layout_alignEnd="@+id/imageView3"
            android:layout_marginEnd="10px" />
    </com.zhy.autolayout.AutoRelativeLayout>

</com.zhy.autolayout.AutoRelativeLayout>