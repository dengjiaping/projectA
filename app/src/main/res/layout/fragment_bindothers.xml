<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        style="@style/Fragment_Head"
        android:text="绑定账号"
        />

    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/rl_bind_wechat_fmt"
        style="@style/Setting_Item"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/line5">

        <com.zhy.autolayout.AutoLinearLayout style="@style/Setting_Item_Name">

            <ImageView
                android:layout_width="60px"
                android:layout_height="60px"
                android:layout_marginLeft="24px"
                android:src="@drawable/wechat" />

            <TextView
                style="@style/Setting_Item_Describe"
                android:text="微信" />
        </com.zhy.autolayout.AutoLinearLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_setting_bindingwechat_fmt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="24px"
                android:textColor="#b8b8b8"
                android:textSize="28px" />

            <ImageView
                style="@style/Arrow_right"
                android:src="@drawable/arrow_right" />

        </com.zhy.autolayout.AutoLinearLayout>

        <TextView
            android:id="@+id/line1"
            style="@style/Line_BG"
            android:layout_alignParentTop="true" />
    </com.zhy.autolayout.AutoRelativeLayout>
    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/rl_bind_qq_fmt"
        style="@style/Setting_Item"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/line5">

        <com.zhy.autolayout.AutoLinearLayout style="@style/Setting_Item_Name">

            <ImageView
                android:layout_width="60px"
                android:layout_height="60px"
                android:layout_marginLeft="24px"
                android:src="@drawable/qqlogin" />

            <TextView
                style="@style/Setting_Item_Describe"
                android:text="QQ" />
        </com.zhy.autolayout.AutoLinearLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_setting_bindingqq_fmt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="24px"
                android:textColor="#b8b8b8"
                android:textSize="28px" />

            <ImageView
                style="@style/Arrow_right"
                android:src="@drawable/arrow_right" />

        </com.zhy.autolayout.AutoLinearLayout>

        <TextView
            android:id="@+id/line2"
            style="@style/Line_BG"
            android:layout_alignParentTop="true" />
    </com.zhy.autolayout.AutoRelativeLayout>
    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/rl_bind_weibo_fmt"
        style="@style/Setting_Item"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/line5">

        <com.zhy.autolayout.AutoLinearLayout style="@style/Setting_Item_Name">

            <ImageView
                android:layout_width="60px"
                android:layout_height="60px"
                android:layout_marginLeft="24px"
                android:src="@drawable/weibo" />

            <TextView
                style="@style/Setting_Item_Describe"
                android:text="微博" />
        </com.zhy.autolayout.AutoLinearLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_binding_weibo_fmt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="24px"
                android:textColor="#b8b8b8"
                android:textSize="28px" />

            <ImageView
                style="@style/Arrow_right"
                android:src="@drawable/arrow_right" />

        </com.zhy.autolayout.AutoLinearLayout>
        <TextView
            android:id="@+id/line3"
            style="@style/Line_BG"
            android:layout_alignParentTop="true" />
    </com.zhy.autolayout.AutoRelativeLayout>
    <TextView
        style="@style/Line_BG" />
</com.zhy.autolayout.AutoLinearLayout>