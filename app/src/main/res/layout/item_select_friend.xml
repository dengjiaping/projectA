<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50px"
        android:background="#f3f5f9"
        android:id="@+id/ll_select_friend_title"
        android:gravity="center_vertical"
        android:visibility="gone"
        >
    <TextView
        android:id="@+id/tv_friend_point"
        android:gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="金色好友"
        android:layout_marginLeft="24px"
        android:textSize="28px"
        android:textColor="#808080"
        />
    </LinearLayout>
    <TextView
        android:layout_below="@+id/ll_select_friend_title"
        android:id="@+id/line1"
        style="@style/Line_BG"/>
    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line1"
        android:background="#fff"
        >
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="98px"
        android:gravity="center_vertical"
        android:layout_alignParentStart="true">
        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24px">
            <com.hzease.tomeet.widget.CircleImageView
                android:id="@+id/civ_avatar_bg_select_friend"
                android:layout_width="70px"
                android:layout_height="70px"
                style="@style/avatar_bg_home_rooms" />

            <ImageView
                android:layout_width="70px"
                android:layout_height="70px"
                android:id="@+id/iv_avatar_select_friend"
                style="@style/avatar_home_rooms" />
        </com.zhy.autolayout.AutoRelativeLayout>
        <TextView
            android:id="@+id/tv_select_friend_name_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#333"
            android:layout_marginLeft="30px"
            android:textSize="30px"
            android:text="唐老鸭"
            android:maxLength="12"
            />
    </com.zhy.autolayout.AutoLinearLayout>
    <CheckBox
        android:focusable="false"
        android:id="@+id/rb_select_friend_item"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="40px"
        android:button="@drawable/selector_issex"
        android:clickable="false"
        />
    </com.zhy.autolayout.AutoRelativeLayout>
</com.zhy.autolayout.AutoRelativeLayout>