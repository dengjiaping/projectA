<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    >
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="558px"
        android:layout_height="294px"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:background="@drawable/bg_createroom"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="98px"
            android:gravity="center"
            android:text="小棉袄"
            android:background="@drawable/bg_createroom_title"
            android:textColor="#fff"
            android:textSize="32px"
            />
        <TextView
            android:id="@+id/tv_outreason_reason_fmt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_marginLeft="40px"
            android:layout_marginRight="40px"
            android:textColor="#333"
            android:text="对方还不是你的好友，不可以聊天，可以通过使用小纸条道具来进阶好友关系"
            />
    </com.zhy.autolayout.AutoLinearLayout>
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_marginTop="40px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        >
        <Button
            android:id="@+id/bt_into_personspace_fmt"
            android:layout_width="230px"
            android:layout_height="80px"
            android:background="@drawable/withdrawal"
            android:text="查看资料"
            android:textColor="#fff"
            />
        <Button
            android:id="@+id/bt_send_smallpaper_fmt"
            android:layout_marginLeft="30px"
            android:layout_width="230px"
            android:layout_height="80px"
            android:background="@drawable/createroom_success"
            android:text="传纸条"
            android:textColor="#fff"
            />
    </com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoLinearLayout>