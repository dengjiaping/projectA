<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    >
    <ImageView
        android:id="@+id/iv_rechargeresult_resulticon_fmt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="166px"
        android:src="@drawable/recharg_falied"
        />
    <TextView
        android:id="@+id/tv_rechargeresult_resulticon_fmt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="34px"
        android:textSize="36px"
        android:textColor="#333"
        />
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="94px"
        >
        <Button
            android:id="@+id/bt_rechargeresult_mywallet_fmt"
            android:layout_width="260px"
            android:layout_height="80px"
            android:background="@drawable/withdrawal"
            android:text="我的钱包"
            android:textColor="#fff"
            android:textSize="30px"
            />
        <Button
            android:text="继续充值"
            android:id="@+id/bt_rechargeresult_rechargeagain_fmt"
            android:layout_width="260px"
            android:layout_height="80px"
            android:layout_marginLeft="50px"
            android:background="@drawable/mywallet_push"
            android:textColor="#fff"
            android:textSize="30px"
            />
    </com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoLinearLayout>