<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    >
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_marginTop="30px"
                    android:layout_marginLeft="24px"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    >
                        <com.hzease.tomeet.widget.CircleImageView
                            android:layout_width="60px"
                            android:layout_height="60px"
                            android:src="@drawable/timg"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="14px"
                            android:text="李雷"
                            />

                </com.zhy.autolayout.AutoLinearLayout>
                <com.xw.repo.BubbleSeekBar
                    android:layout_gravity="center_vertical"
                    android:id="@+id/bubbleseekbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
        </com.zhy.autolayout.AutoLinearLayout>
        <com.hzease.tomeet.widget.XCFlowLayout
            android:layout_marginTop="30px"
            android:id="@+id/flowlayout_tabs_evaluate"
            android:layout_width="match_parent"
            android:layout_height="140px"
            >
        </com.hzease.tomeet.widget.XCFlowLayout>
        <EditText
            android:layout_marginTop="30px"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/edittextrectanglenext2"
            android:layout_width="702px"
            android:hint="在次输入其他标签"
            android:paddingTop="20px"
            android:paddingBottom="20px"
            android:paddingLeft="20px"
            android:layout_height="wrap_content" />
</com.zhy.autolayout.AutoLinearLayout>