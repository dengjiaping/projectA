<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical">

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24px"
            android:layout_marginTop="30px"
            android:gravity="center_horizontal">

            <com.hzease.tomeet.widget.CircleImageView
                android:id="@+id/memberIcon"
                android:layout_width="60px"
                android:layout_height="60px"
                android:src="@drawable/timg" />

            <TextView
                android:id="@+id/memberName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                android:layout_marginTop="14px"
                android:text="李雷"
                android:textColor="#333"
                android:textSize="28px" />
        </com.zhy.autolayout.AutoLinearLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/all_friendlikevalue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24px"
            android:layout_marginTop="14px"
            android:gravity="center"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="好感度" />

            <com.xw.repo.BubbleSeekBar
                app:bsb_max="10"
                app:bsb_min="1"
                app:bsb_show_progress_in_float="false"
                app:bsb_auto_adjust_section_mark="true"
                app:bsb_section_count="9"
                app:bsb_progress="5"
                android:id="@+id/bsb_likevalue_evaluate_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                app:bsb_thumb_color="@color/white"
                app:bsb_track_size="10px"
                app:bsb_second_track_size="10px"
                app:bsb_thumb_radius="40px"
                app:bsb_second_track_color="@color/friend_red"
                app:bsb_track_color="@color/evaluate_gray"
                />
        </com.zhy.autolayout.AutoLinearLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24px"
            android:layout_marginTop="14px"
            android:gravity="center"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="表现" />

            <com.xw.repo.BubbleSeekBar
                android:id="@+id/bsb_show_evaluate_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="28px"
                app:bsb_show_progress_in_float="false"
                app:bsb_auto_adjust_section_mark="true"
                app:bsb_section_count="9"
                app:bsb_max="10"
                app:bsb_min="1"
                app:bsb_progress="5"
                app:bsb_second_track_color="@color/friend_blue"
                app:bsb_track_color="@color/evaluate_gray"
                app:bsb_thumb_color="@color/white"
                app:bsb_track_size="10px"
                app:bsb_second_track_size="10px"
                app:bsb_thumb_radius="40px"
                />
        </com.zhy.autolayout.AutoLinearLayout>

    </com.zhy.autolayout.AutoLinearLayout>

    <com.zhy.view.flowlayout.TagFlowLayout
        app:max_select="1"
        android:id="@+id/flowlayout_tabs_evaluate"
        android:layout_width="match_parent"
        android:layout_height="140px"
        android:layout_marginTop="30px" />

    <EditText
        android:id="@+id/et_evaluate_item"
        android:layout_width="702px"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30px"
        android:background="@drawable/edittextrectanglenext2"
        android:hint="在此输入其他标签"
        android:paddingBottom="20px"
        android:paddingLeft="20px"
        android:paddingTop="20px" />
</com.zhy.autolayout.AutoLinearLayout>