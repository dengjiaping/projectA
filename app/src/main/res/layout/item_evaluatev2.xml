<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#fff"
        >
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24px"
            android:layout_marginTop="30px"
            android:gravity="center_horizontal|center_vertical">

            <com.hzease.tomeet.widget.CircleImageView
                android:id="@+id/memberIcon"
                android:layout_width="60px"
                android:layout_height="60px" />

            <TextView
                android:id="@+id/memberName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                android:text="李雷"
                android:textColor="#333"
                android:textSize="28px" />

            <TextView
                android:id="@+id/tv_isSign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                android:textColor="#ff8373"
                android:textSize="28px"
                android:text="(未签到)"
                android:visibility="gone"
                />
        </com.zhy.autolayout.AutoLinearLayout>
        <LinearLayout
            android:id="@+id/ll_isfriend"
            android:layout_width="match_parent"
            android:layout_marginTop="34px"
            android:layout_height="65px"
            android:layout_marginLeft="24px"
            android:gravity="center_vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="28px"
                android:textColor="#808080"
                android:text="好感度"
                />
            <RadioGroup
                android:id="@+id/rg_friends"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="180px"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                >
                <RadioButton
                    android:id="@+id/rb_gold_friend"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:button="@null"
                    android:drawableBottom="@drawable/friend_glod_ispress"
                    />
                <RadioButton
                    android:id="@+id/rb_blue_friend"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:button="@null"
                    android:drawableBottom="@drawable/friend_blue_ispress"
                    />
                <RadioButton
                    android:id="@+id/rb_green_friend"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:button="@null"
                    android:drawableBottom="@drawable/friend_green_ispress"
                    />
                <RadioButton
                    android:id="@+id/rb_gray_friend"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:button="@null"
                    android:drawableBottom="@drawable/friend_gray_ispress"
                    />
                <RadioButton
                    android:id="@+id/rb_red_friend"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:button="@null"
                    android:drawableBottom="@drawable/friend_red_ispress"
                    />
            </RadioGroup>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_show"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40px"
            android:gravity="center_vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="28px"
                android:textColor="#808080"
                android:text="表现"
                android:layout_marginLeft="24px"
                />
            <SeekBar
                android:id="@+id/sb_showvalue"
                android:layout_width="540px"
                android:layout_height="wrap_content"
                android:thumb="@drawable/button_thumb"
                android:layout_marginLeft="32px"
                android:maxHeight="4px"
                android:progressDrawable="@drawable/seekbar_bg"
                android:max="10"
                />
            <TextView
                android:id="@+id/tv_showvalue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="28px"
                android:textColor="#808080"
                android:text="5分"
                />
        </LinearLayout>
        <com.zhy.view.flowlayout.TagFlowLayout
            android:layout_marginLeft="24px"
            android:id="@+id/ftl_label"
            android:layout_width="wrap_content"
            android:layout_height="160px"
            app:max_select="1"
            app:gravity="center"
            />
        <EditText
            android:id="@+id/et_evaluate_item"
            android:layout_width="702px"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24px"
            android:layout_marginTop="30px"
            android:background="@drawable/edittextrectanglenext2"
            android:hint="在此输入其他标签最多16个字"
            android:paddingBottom="20px"
            android:paddingLeft="20px"
            android:paddingTop="20px"
            android:maxLength="16"
            android:layout_marginBottom="30px"
            />
    </LinearLayout>
</com.zhy.autolayout.AutoLinearLayout>