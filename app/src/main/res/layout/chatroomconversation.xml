<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@drawable/chatroom_bg"
    android:layout_height="match_parent">
    <TextView
        style="@style/Fragment_Head"
        android:id="@+id/textView25"
        android:background="@color/transparent"
        android:text="狼人杀十人组"
        android:textColor="#fff"/>
    <ListView
        android:id="@+id/icon"
        android:layout_width="140px"
        android:layout_height="932px"
        android:layout_below="@+id/textView25"
        android:layout_alignParentLeft="true"
        android:scrollbars="none"
        android:divider="@null"
        >
    </ListView>
    <ImageView
        android:id="@+id/imageview"
        android:layout_marginLeft="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/return_room"
        android:layout_alignTop="@+id/roomsinfos"
        android:layout_marginStart="16dp" />
    <ImageView
        android:layout_alignParentRight="true"
        android:layout_marginTop="28px"
        android:layout_marginRight="30px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/notice_room"
        android:id="@+id/roomsinfos" />
    <fragment
        android:id="@+id/conversation"
        android:name="io.rong.imkit.fragment.ConversationFragment"
        android:layout_width="562px"
        android:layout_height="932px"
        android:layout_below="@+id/textView25"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="172px"
        android:layout_below="@+id/icon"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/exit_room"
            android:layout_marginTop="32px"
            android:layout_marginBottom="40px"
            />
        <ImageView
            android:layout_marginLeft="30px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/prepare_room"
            android:layout_marginTop="20px"
            android:layout_marginBottom="30px"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/share_room"
            android:layout_marginLeft="30px"
            android:layout_marginTop="32px"
            android:layout_marginBottom="40px"
            />
    </LinearLayout>
</RelativeLayout>