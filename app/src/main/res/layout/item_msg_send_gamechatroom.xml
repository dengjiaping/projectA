<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:orientation="horizontal"
        android:padding="5dp">

        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="10px">

            <ImageView
                android:id="@+id/iv_failed_item_send_gamechatroom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/send_error"
                android:visibility="gone" />

            <ProgressBar
                android:id="@+id/pb_status_item_send_gamechatroom"
                android:layout_width="40px"
                android:layout_height="40px"
                android:layout_centerInParent="true" />
        </com.zhy.autolayout.AutoRelativeLayout>

        <TextView
            android:id="@+id/tv_msg_item_send_gamechatroom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/rc_ic_bubble_no_right"
            android:text="hehehehehe" />

        <ImageView
            android:id="@+id/iv_avatar_item_send_gamechatroom"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="10dp"
            android:src="@mipmap/ic_launcher" />

    </LinearLayout>
</LinearLayout>