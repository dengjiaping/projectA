<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        style="@style/Fragment_Head"
        android:text="注册后会有期"
         />

    <EditText
        android:id="@+id/et_regeist_phoen_fmt"
        style="@style/EditText_Style"
        android:layout_width="460px"
        android:layout_height="wrap_content"
        android:layout_marginTop="306px"
        android:hint="手机号"
        android:inputType="phone"
        android:lines="1"
        android:maxLength="11"
        android:paddingLeft="3px"
        android:textSize="36px" />

    <TextView
        style="@style/Line_BG"
        android:layout_width="460px"
        android:layout_height="1px"
        android:layout_marginTop="28px" />
    <RelativeLayout
        android:layout_width="270px"
        android:layout_height="92px"
        android:background="@drawable/shape_button_bg"
        android:layout_marginTop="50px"
        android:gravity="center"
        >
        <Button
            android:id="@+id/bt_regeist_next_fmt"
            android:layout_width="260px"
            android:layout_height="82px"
            android:background="@drawable/selector_login_button_success"
            android:padding="8px"
            android:text="下一步"
            android:textColor="#fff"
            />
    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60px"
        android:autoLink="all"
        android:text="注册后会有期代表你已阅读并同意用户协议"
        android:textColor="#999"
        android:textSize="26px" />
</com.zhy.autolayout.AutoLinearLayout>