<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="88px"
        android:orientation="horizontal">

        <RadioButton
            android:button="@null"
            android:background="@drawable/friend_gold"
            android:id="@+id/rb_gold_chat_fmt"
            style="@style/rb_friend_list_chat_fmt"
            android:checked="true"
            />

        <RadioButton
            android:button="@null"
            android:background="@drawable/friend_blue"
            android:id="@+id/rb_blue_chat_fmt"
            style="@style/rb_friend_list_chat_fmt"
            />

        <RadioButton
            android:button="@null"
            android:background="@drawable/friend_green"
            android:id="@+id/rb_green_chat_fmt"
            style="@style/rb_friend_list_chat_fmt"
            />

        <RadioButton
            android:button="@null"
            android:background="@drawable/friend_gray"
            android:id="@+id/rb_gray_chat_fmt"
            style="@style/rb_friend_list_chat_fmt"
            />

        <RadioButton
            android:button="@null"
            android:background="@drawable/friend_red"
            android:id="@+id/rb_red_chat_fmt"
            style="@style/rb_friend_list_chat_fmt"
            />

    </RadioGroup>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_conversation_list_chat_fmt"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v7.widget.RecyclerView>

</LinearLayout>