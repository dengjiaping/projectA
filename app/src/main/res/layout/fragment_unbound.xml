<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    >
    <TextView
        android:id="@+id/tv_unbound_head"
        style="@style/Fragment_Head"
        />
    <ImageView
        android:id="@+id/iv_3part_avatar"
        android:layout_width="122px"
        android:layout_height="122px"
        android:layout_marginTop="192px"
        />
    <TextView
        android:id="@+id/iv_3part_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30px"
        android:textColor="#333"
        android:layout_marginTop="40px"
        />
    <Button
       style="@style/Login_Success"
        android:layout_width="670px"
        android:layout_height="80px"
        android:text="解除绑定"
        android:layout_marginTop="90px"
        android:id="@+id/bt_3part_unbound"
        />
</com.zhy.autolayout.AutoLinearLayout>