<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    >
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="650px"
            android:layout_height="470px"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:background="@drawable/bg_createroom"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="98px"
                android:gravity="center"
                android:text="小纸条"
                android:background="@drawable/bg_createroom_title"
                android:textColor="#fff"
                android:textSize="32px"
                />
            <com.hzease.tomeet.widget.CircleImageView
                android:id="@+id/civ_sendsmallpaper_head_pop"
                android:layout_marginTop="40px"
                android:layout_width="66px"
                android:layout_height="66px"
                android:src="@drawable/timg"
                />
            <TextView
                android:id="@+id/tv_sendsmallpaper_name_pop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="李雷"
                android:textColor="#333"
                android:layout_marginTop="10px"
                />
            <com.hzease.tomeet.widget.NoteEditor
                android:id="@+id/ne_smallpager_content_fmt"
                android:background="@drawable/editsharp"
                android:hint="在此写下悄悄话"
                android:layout_width="550px"
                android:layout_height="match_parent"
                android:enabled="false"
                />

        </com.zhy.autolayout.AutoLinearLayout>
    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/all_state_pop"
        android:layout_marginTop="40px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        >
        <Button
            android:id="@+id/bt_smallpager_delete_pop"
            android:layout_width="230px"
            android:layout_height="80px"
            android:background="@drawable/createroom_cancel"
            android:text="扔进废纸篓"
            android:textColor="#333"
            />
        <Button
            android:id="@+id/bt_smallpaper_read_pop"
            android:layout_width="200px"
            android:layout_height="80px"
            android:layout_marginLeft="30px"
            android:background="@drawable/withdrawal"
            android:text="收起放好"
            android:textColor="#fff"
            />
        <Button
            android:id="@+id/bt_smallpager_reply_fmt"
            android:layout_marginLeft="30px"
            android:layout_width="140px"
            android:layout_height="80px"
            android:textSize="29px"
            style="@style/Button_Success"
            android:text="回复"
            android:textColor="#fff"
            />
    </com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoLinearLayout>