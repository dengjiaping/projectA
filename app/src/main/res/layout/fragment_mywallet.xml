<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff5756">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="130px"
        android:background="#ff5756"
        android:id="@+id/textView9"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="我的钱包"
        android:textSize="36px"
        android:paddingTop="68px"
        android:textColor="#ffe4e4"
        android:gravity="center_horizontal"/>

    <TextView
        android:id="@+id/textView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="明细"
        android:layout_alignParentRight="true"
        android:layout_marginRight="24px"
        android:textColor="#ffe4e4"
        android:layout_marginTop="68px"
        android:textSize="36px"/>
    <LinearLayout
        android:layout_width="624px"
        android:layout_height="900px"
        android:layout_marginTop="304px"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:background="@drawable/mywalletbg">
        <RelativeLayout
            android:layout_width="612px"
            android:layout_height="888px"
            android:background="#fff">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="144px"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                android:id="@+id/linearLayout">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="80px"
                        android:textColor="#ffa356"
                        android:text="10.00"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="账户余额"
                        android:textColor="#808080"
                        android:textSize="28px"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_marginLeft="94px">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10.00"
                        android:textSize="80px"
                        android:textColor="#67cccc"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="冻结金额"
                        android:textColor="#808080"
                        android:textSize="28px"/>
                </LinearLayout>
            </LinearLayout>
            <Button
                android:layout_width="480px"
                android:layout_height="88px"
                android:layout_marginTop="240px"
                android:layout_below="@+id/linearLayout"
                android:background="@drawable/mywallet_push"
                android:layout_centerHorizontal="true"
                android:text="充值"
                android:textSize="34px"
                android:textColor="#fff"
                android:id="@+id/button" />
            <Button
                android:layout_width="480px"
                android:layout_height="88px"
                android:layout_marginTop="50px"
                android:background="@drawable/withdrawal"
                android:text="提现"
                android:textSize="34px"
                android:textColor="#fff"
                android:layout_below="@+id/button"
                android:layout_alignLeft="@+id/button"
                android:layout_alignStart="@+id/button" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>