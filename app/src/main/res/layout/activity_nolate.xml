<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        style="@style/Fragment_Head"
        android:text="我没迟到" />

    <TextView style="@style/Line_BG" />

    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/rl_home_room_select_fmt"
        style="@style/Setting_Item"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView21">

        <com.zhy.autolayout.AutoLinearLayout style="@style/Setting_Item_Name">

            <TextView
                android:id="@+id/tv_home_rooms_prove_person_act"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24px"
                android:text="选择为你证明没迟到的用户"
                android:textColor="#b8b8b8"
                android:textSize="30px"
                />
        </com.zhy.autolayout.AutoLinearLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical">
            <ImageView
                style="@style/Arrow_right"
                android:src="@drawable/arrow_right" />
        </com.zhy.autolayout.AutoLinearLayout>

    </com.zhy.autolayout.AutoRelativeLayout>
    <TextView style="@style/Line_BG" />
    <TextView style="@style/Line_BG"
        android:layout_marginTop="30px"
        />
    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="600px">
        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="match_parent"
            android:layout_height="600px"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView24"
            android:background="#fff">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24px"
                android:layout_marginTop="30px"
                android:background="#fff"
                android:src="@drawable/write" />

            <EditText
                android:id="@+id/et_home_room_notlatecontent_fmt"
                android:layout_width="match_parent"
                android:layout_height="600px"
                android:background="@drawable/edittextrectangle"
                android:gravity="top"
                android:hint="未签到理由"
                android:textColor="#b8b8b8"
                android:inputType="textMultiLine"
                android:paddingLeft="20px"
                android:paddingTop="30px" />

        </LinearLayout>
        <ImageView
            android:id="@+id/iv_home_room_notlatephoto_fmt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/add_photo"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="24px"
            android:layout_marginBottom="30px"
            />
        <ImageView
            android:id="@+id/iv_home_room_notlatephoto_two_fmt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/add_photo"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/iv_home_room_notlatephoto_fmt"
            android:layout_marginLeft="24px"
            android:layout_marginBottom="30px"
            android:visibility="gone"
            />
        <ImageView
            android:id="@+id/iv_home_room_notlatephoto_three_fmt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/add_photo"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/iv_home_room_notlatephoto_two_fmt"
            android:layout_marginLeft="24px"
            android:layout_marginBottom="30px"
            android:visibility="gone"
            />
    </com.zhy.autolayout.AutoRelativeLayout>
    <TextView
        style="@style/Line_BG" />
    <Button
        android:layout_gravity="center_horizontal"
        android:id="@+id/bt_home_room_notlate_fmt"
        style="@style/Button_Success"
        android:layout_below="@+id/linearLayout3"
        android:layout_marginTop="40px"
        android:text="提交" />
</com.zhy.autolayout.AutoLinearLayout>