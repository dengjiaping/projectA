<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130px"
        android:layout_marginLeft="24px"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_avatar_item_conversation_chat_fmt"
            android:layout_width="100px"
            android:layout_height="100px"
            android:layout_marginRight="24px" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="18px"
                android:gravity="center_vertical"
                >

                <TextView
                    android:id="@+id/tv_name_item_conversation_chat_fmt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/name_black"
                    android:textSize="36px" />
                <ImageView
                    android:id="@+id/iv_vip_item_conversation_chat_fmt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/vip_icon"
                    />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_message_item_conversation_chat_fmt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/message_gray"
                android:textSize="28px" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="24px"
            android:gravity="right"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_time_item_conversation_chat_fmt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="18px"
                android:textColor="@color/message_gray"
                android:textSize="24px" />

            <TextView
                android:id="@+id/tv_unread_item_conversation_chat_fmt"
                android:layout_width="33dp"
                android:layout_height="22dp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>