<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_height="130px">
    <ImageView
        android:id="@+id/iv_avatar_item_conversation_chat_fmt"
        android:layout_marginLeft="15px"
        android:layout_marginRight="24px"
        android:layout_width="100px"
        android:layout_height="100px"
        android:src="@mipmap/ic_launcher"
        />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_name_item_conversation_chat_fmt"
            android:text="李雷"
            android:textSize="36px"
            android:textColor="@color/name_black"
            android:layout_marginBottom="18px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_message_item_conversation_chat_fmt"
            android:text="明天一起去"
            android:textSize="28px"
            android:textColor="@color/message_gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_time_item_conversation_chat_fmt"
            android:text="14:40"
            android:textSize="24px"
            android:textColor="@color/message_gray"
            android:layout_marginBottom="18px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="未读"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    </LinearLayout>

</LinearLayout>