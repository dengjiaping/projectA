<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    android:gravity="center_horizontal"
    >
    <TextView
        android:id="@+id/tv_unbound_head"
        style="@style/Fragment_Head"
        android:text="解绑微信号"
        />
    <EditText
        android:id="@+id/et_pwd"
        style="@style/EditText_Style"
        android:layout_width="670px"
        android:layout_height="wrap_content"
        android:layout_marginTop="94px"
        android:paddingTop="40px"
        android:paddingBottom="28px"
        android:hint="请输入密码"
        android:inputType="textPassword"
        android:lines="1"
        android:paddingLeft="3px"
        android:textColor="@color/normal_editText"
        android:textColorHint="#cbcdcb"
        android:textSize="36px" />

    <TextView
        style="@style/Line_BG"
        android:layout_width="670px"
        android:layout_height="1px"
        android:background="#d3d3d3" />
    <Button
        android:id="@+id/bt_sure_unbound"
        android:layout_marginTop="42px"
        android:text="确认解绑"
        style="@style/Login_Success"
        android:layout_width="670px"
        android:layout_height="80px" />
</com.zhy.autolayout.AutoLinearLayout>