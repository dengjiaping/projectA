<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgdrawable_me">

    <!--啊是大-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:layout_marginTop="64px"
        android:gravity="center_vertical"
        >
        <pro.yueyuan.project_t.widget.CircleImageView
            android:layout_width="80px"
            android:layout_height="80px"
            android:layout_marginLeft="24px"
            android:background="@drawable/timg"
            android:id="@+id/circleImageView" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="韩梅梅"
            android:textSize="34px"
            android:layout_marginLeft="24px"
            android:layout_marginStart="16dp"
            android:textColor="#fff"
            android:id="@+id/textView10" />
        <ImageView
            android:layout_width="28px"
            android:layout_height="32px"
            android:layout_marginLeft="20px"
            android:src="@null"
            android:id="@+id/imageView3" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="34px"
            android:textColor="#ffb0b0"
            android:layout_marginLeft="10px"
            />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="40px"
            android:layout_height="44px"
            android:src="@drawable/share"
            android:layout_marginLeft="298px"/>
        <ImageView
            android:id="@+id/iv_me_setting_fmt"
            android:layout_width="40px"
            android:layout_height="44px"
            android:src="@drawable/setting"
            android:layout_marginLeft="50px" />
    </LinearLayout>
    <pro.yueyuan.project_t.widget.AutoCardView
        android:id="@+id/autoCardView"
        android:layout_width="702px"
        android:layout_height="280px"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="180px"
        android:background="#fff"
        app:cardElevation="12px">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <LinearLayout
                    android:id="@+id/mybalance"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center">
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical">
                        <ImageView
                            android:id="@+id/mine_moneyIcon"
                            android:layout_width="44px"
                            android:layout_height="44px"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_marginTop="48px"
                            android:src="@drawable/wallet" />
                        <TextView
                            android:id="@+id/textView12"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30px"
                            android:layout_marginTop="38px"
                            android:layout_toRightOf="@+id/mine_moneyIcon"
                            android:text="我的余额"
                            android:textColor="#333" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignLeft="@+id/textView12"
                            android:layout_alignStart="@+id/textView12"
                            android:layout_below="@+id/textView12"
                            android:text="30.00"
                            android:textColor="#b8b8b8"
                            android:textSize="28px" />
                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/djmoney"
                            android:layout_width="44px"
                            android:layout_height="44px"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_marginTop="48px"
                            android:src="@drawable/wallet" />

                        <TextView
                            android:id="@+id/textView13"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30px"
                            android:layout_marginTop="38px"
                            android:layout_toRightOf="@+id/djmoney"
                            android:text="冻结余额"
                            android:textColor="#333" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignLeft="@+id/textView13"
                            android:layout_alignStart="@+id/textView13"
                            android:layout_below="@+id/textView13"
                            android:text="30.00"
                            android:textColor="#b8b8b8"
                            android:textSize="28px" />

                    </RelativeLayout>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center">
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/mydj"
                            android:layout_width="44px"
                            android:layout_height="44px"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_marginTop="48px"
                            android:src="@drawable/wallet" />

                        <TextView
                            android:id="@+id/textView14"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30px"
                            android:layout_marginTop="38px"
                            android:layout_toRightOf="@+id/mydj"
                            android:text="我的道具"
                            android:textColor="#333" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignLeft="@+id/textView14"
                            android:layout_below="@+id/textView14"
                            android:text="查看详情"
                            android:textColor="#b8b8b8"
                            android:textSize="28px" />
                    </RelativeLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center">
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/mytitle"
                            android:layout_width="44px"
                            android:layout_height="44px"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_marginTop="48px"
                            android:src="@drawable/wallet" />
                        <TextView
                            android:id="@+id/textView15"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30px"
                            android:layout_marginTop="38px"
                            android:layout_toRightOf="@+id/mytitle"
                            android:text="我的标签"
                            android:textColor="#333" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignLeft="@+id/textView15"
                            android:layout_alignStart="@+id/textView15"
                            android:layout_below="@+id/textView15"
                            android:text="查看详情"
                            android:textColor="#b8b8b8"
                            android:textSize="28px" />

                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </pro.yueyuan.project_t.widget.AutoCardView>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/myrecycle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="492px">

    </android.support.v7.widget.RecyclerView>
</RelativeLayout>