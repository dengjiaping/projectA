<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgdrawable_me"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:layout_marginTop="64px"
        android:gravity="center_vertical">

        <pro.yueyuan.project_t.widget.CircleImageView
            android:id="@+id/circleImageView"
            android:layout_width="80px"
            android:layout_height="80px"
            android:layout_marginLeft="24px"
            android:background="@drawable/timg" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24px"
            android:layout_marginStart="16dp"
            android:text="韩梅梅"
            android:textColor="#fff"
            android:textSize="34px" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="28px"
            android:layout_height="32px"
            android:layout_marginLeft="20px"
            android:src="@drawable/flowers" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10px"
            android:text="2"
            android:textColor="#ffb0b0"
            android:textSize="34px" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="40px"
            android:layout_height="44px"
            android:layout_marginLeft="298px"
            android:src="@drawable/share" />

        <ImageView
            android:layout_width="40px"
            android:layout_height="44px"
            android:layout_marginLeft="50px"
            android:src="@drawable/setting" />
    </LinearLayout>

    <pro.yueyuan.project_t.widget.AutoCardView
        android:id="@+id/autoCardView"
        android:layout_width="702px"
        android:layout_height="280px"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="180px"
        android:background="#fff"
        app:cardElevation="12px">

        <LinearLayout
            android:id="@+id/mybalance"
            android:layout_width="351px"
            android:layout_height="140px"
            android:gravity="center_horizontal">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/mine_moneyIcon"
                    android:layout_width="44px"
                    android:layout_height="44px"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="48px"
                    android:src="@drawable/wallet" />

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30px"
                    android:layout_marginTop="38px"
                    android:layout_toRightOf="@+id/mine_moneyIcon"
                    android:text="我的余额"
                    android:textColor="#333" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/textView12"
                    android:layout_alignStart="@+id/textView12"
                    android:layout_below="@+id/textView12"
                    android:text="30.00"
                    android:textColor="#b8b8b8"
                    android:textSize="28px" />

            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="351px"
            android:layout_height="140px"
            android:layout_marginLeft="351px"
            android:gravity="center_horizontal">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/djmoney"
                    android:layout_width="44px"
                    android:layout_height="44px"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="48px"
                    android:src="@drawable/wallet" />

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30px"
                    android:layout_marginTop="38px"
                    android:layout_toRightOf="@+id/djmoney"
                    android:text="冻结余额"
                    android:textColor="#333" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/textView13"
                    android:layout_alignStart="@+id/textView13"
                    android:layout_below="@+id/textView13"
                    android:text="30.00"
                    android:textColor="#b8b8b8"
                    android:textSize="28px" />

            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="351px"
            android:layout_height="140px"
            android:layout_marginTop="140px"
            android:gravity="center_horizontal">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/mydj"
                    android:layout_width="44px"
                    android:layout_height="44px"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="48px"
                    android:src="@drawable/wallet" />

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30px"
                    android:layout_marginTop="38px"
                    android:layout_toRightOf="@+id/mydj"
                    android:text="我的道具"
                    android:textColor="#333" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/textView14"
                    android:layout_below="@+id/textView14"
                    android:text="查看详情"
                    android:textColor="#b8b8b8"
                    android:textSize="28px" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="351px"
            android:layout_height="140px"
            android:layout_marginLeft="351px"
            android:layout_marginTop="140px"
            android:gravity="center_horizontal">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/mytitle"
                    android:layout_width="44px"
                    android:layout_height="44px"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="48px"
                    android:src="@drawable/wallet" />

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30px"
                    android:layout_marginTop="38px"
                    android:layout_toRightOf="@+id/mytitle"
                    android:text="我的标签"
                    android:textColor="#333" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/textView15"
                    android:layout_alignStart="@+id/textView15"
                    android:layout_below="@+id/textView15"
                    android:text="查看详情"
                    android:textColor="#b8b8b8"
                    android:textSize="28px" />

            </RelativeLayout>
        </LinearLayout>
    </pro.yueyuan.project_t.widget.AutoCardView>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/myrecycle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/autoCardView"
        android:layout_marginTop="15dp"
        android:background="@color/finish_bgcolor">

    </android.support.v7.widget.RecyclerView>
</RelativeLayout>