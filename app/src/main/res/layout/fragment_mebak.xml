<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgdrawable_me"
    android:orientation="vertical">

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/me_swiperefreshlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.zhy.autolayout.AutoRelativeLayout
                android:id="@+id/all_top_setting_me_fmt"
                android:layout_width="match_parent"
                android:layout_height="80px"
                >

                <ImageView
                    android:id="@+id/iv_avatar_me_fmt"
                    android:layout_width="80px"
                    android:layout_height="80px"
                    android:layout_marginLeft="24px"
                    android:src="@drawable/person_default_icon"
                    />
                <LinearLayout
                    android:id="@+id/ll_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/iv_avatar_me_fmt"
                    android:layout_marginLeft="24px"
                    android:gravity="center_vertical"
                    >
                <TextView
                    android:text="徐强"
                    android:id="@+id/tv_me_nickname_fmt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#fff"
                    android:textSize="34px" />
                <ImageView
                    android:id="@+id/iv_me_isVip_fmt"
                    android:layout_toRightOf="@+id/tv_me_nickname_fmt"
                    android:layout_marginLeft="10px"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/vip_icon"
                    />
                </LinearLayout>
                <TextView
                    android:id="@+id/tv_tosetID_fmt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll_name"
                    android:layout_toRightOf="@+id/iv_avatar_me_fmt"
                    android:layout_marginLeft="24px"
                    android:text="点击设置ID"
                    android:textSize="20px"
                    android:textColor="#fff"
                    android:layout_marginTop="14px"
                    />
                <LinearLayout
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="24px"
                    >
                <ImageView
                    android:id="@+id/iv_share_me_fmt"
                    android:layout_width="40px"
                    android:layout_height="44px"
                    android:layout_marginLeft="64px"
                    android:src="@drawable/share" />

                <ImageView
                    android:id="@+id/iv_me_setting_fmt"
                    android:layout_width="40px"
                    android:layout_height="44px"
                    android:layout_marginLeft="50px"
                    android:src="@drawable/setting" />
                </LinearLayout>
            </com.zhy.autolayout.AutoRelativeLayout>

            <com.hzease.tomeet.widget.AutoCardView
                android:id="@+id/autoCardView"
                android:layout_width="702px"
                android:layout_height="280px"
                android:layout_below="@id/all_top_setting_me_fmt"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30px"
                android:background="#fff"
                app:cardElevation="12px">

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <com.zhy.autolayout.AutoLinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <com.zhy.autolayout.AutoLinearLayout
                            android:id="@+id/mybalance"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center">

                            <com.zhy.autolayout.AutoRelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:id="@+id/mine_moneyIcon"
                                    android:layout_width="44px"
                                    android:layout_height="44px"
                                    android:layout_alignParentLeft="true"
                                    android:layout_alignParentStart="true"
                                    android:layout_marginTop="48px"
                                    android:src="@drawable/moneyicon" />

                                <TextView
                                    android:id="@+id/textView12"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="30px"
                                    android:layout_marginTop="38px"
                                    android:layout_toRightOf="@+id/mine_moneyIcon"
                                    android:text="保证金"
                                    android:textColor="#333" />

                                <TextView
                                    android:id="@+id/tv_me_amount_fmt"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignLeft="@+id/textView12"
                                    android:layout_alignStart="@+id/textView12"
                                    android:layout_below="@+id/textView12"
                                    android:text="0.00"
                                    android:textColor="#b8b8b8"
                                    android:textSize="28px" />
                            </com.zhy.autolayout.AutoRelativeLayout>

                        </com.zhy.autolayout.AutoLinearLayout>

                        <com.zhy.autolayout.AutoLinearLayout
                            android:id="@+id/myfreezebalance"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center">

                            <com.zhy.autolayout.AutoRelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:id="@+id/djmoney"
                                    android:layout_width="44px"
                                    android:layout_height="44px"
                                    android:layout_alignParentLeft="true"
                                    android:layout_alignParentStart="true"
                                    android:layout_marginTop="48px"
                                    android:src="@drawable/djmoney" />

                                <TextView
                                    android:id="@+id/textView13"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="30px"
                                    android:layout_marginTop="38px"
                                    android:layout_toRightOf="@+id/djmoney"
                                    android:text="冻结中"
                                    android:textColor="#333" />

                                <TextView
                                    android:id="@+id/tv_me_freeze_fmt"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignLeft="@+id/textView13"
                                    android:layout_alignStart="@+id/textView13"
                                    android:layout_below="@+id/textView13"
                                    android:text="0.00"
                                    android:textColor="#b8b8b8"
                                    android:textSize="28px" />

                            </com.zhy.autolayout.AutoRelativeLayout>

                        </com.zhy.autolayout.AutoLinearLayout>
                    </com.zhy.autolayout.AutoLinearLayout>

                    <com.zhy.autolayout.AutoLinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <com.zhy.autolayout.AutoLinearLayout
                            android:id="@+id/ll_me_seemyprops_fmt"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center">

                            <com.zhy.autolayout.AutoRelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:id="@+id/mydj"
                                    android:layout_width="44px"
                                    android:layout_height="44px"
                                    android:layout_alignParentLeft="true"
                                    android:layout_alignParentStart="true"
                                    android:layout_marginTop="48px"
                                    android:src="@drawable/mydj" />

                                <TextView
                                    android:id="@+id/textView14"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="30px"
                                    android:layout_marginTop="38px"
                                    android:layout_toRightOf="@+id/mydj"
                                    android:text="我的道具"
                                    android:textColor="#333" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignLeft="@+id/textView14"
                                    android:layout_below="@+id/textView14"
                                    android:text="查看详情"
                                    android:textColor="#b8b8b8"
                                    android:textSize="28px" />
                            </com.zhy.autolayout.AutoRelativeLayout>

                        </com.zhy.autolayout.AutoLinearLayout>

                        <com.zhy.autolayout.AutoLinearLayout
                            android:id="@+id/all_me_smallpaper_fmt"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center">

                            <com.zhy.autolayout.AutoRelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:id="@+id/mytitle"
                                    android:layout_width="44px"
                                    android:layout_height="44px"
                                    android:layout_alignParentLeft="true"
                                    android:layout_alignParentStart="true"
                                    android:layout_marginTop="48px"
                                    android:src="@drawable/propsshop_small_paper" />

                                <TextView
                                    android:id="@+id/textView15"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="30px"
                                    android:layout_marginTop="38px"
                                    android:layout_toRightOf="@+id/mytitle"
                                    android:text="小纸条"
                                    android:textColor="#333" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignLeft="@+id/textView15"
                                    android:layout_alignStart="@+id/textView15"
                                    android:layout_below="@+id/textView15"
                                    android:text="查看详情"
                                    android:textColor="#b8b8b8"
                                    android:textSize="28px" />
                            </com.zhy.autolayout.AutoRelativeLayout>
                        </com.zhy.autolayout.AutoLinearLayout>
                    </com.zhy.autolayout.AutoLinearLayout>
                </com.zhy.autolayout.AutoLinearLayout>
            </com.hzease.tomeet.widget.AutoCardView>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/myrecycle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/autoCardView"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20px"
                app:layout_moreProgress="@layout/view_more_progress" />
            <LinearLayout
                android:id="@+id/ll_no_myjoinroom"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/autoCardView"
                android:layout_centerInParent="true"
                android:layout_marginTop="20px"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="gone"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/list_empty_icon"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20px"
                    android:text="您还没有参加任何活动哦，快去参加吧~"
                    />
            </LinearLayout>
        </com.zhy.autolayout.AutoRelativeLayout>
    </android.support.v4.widget.SwipeRefreshLayout>
</com.zhy.autolayout.AutoRelativeLayout>