<resources>

    <!-- Base application theme. 最基类的主题，取消过场动画-->
    <style name="Base.AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowAnimationStyle">@style/noAnimation</item>
    </style>

    <style name="AppTheme" parent="Base.AppTheme">
        <!-- 自定义主题写在这里 -->
    </style>


    <style name="noAnimation">
        <item name="android:activityOpenEnterAnimation">@null</item>
        <item name="android:activityOpenExitAnimation">@null</item>
        <item name="android:activityCloseEnterAnimation">@null</item>
        <item name="android:activityCloseExitAnimation">@null</item>
        <item name="android:taskOpenEnterAnimation">@null</item>
        <item name="android:taskOpenExitAnimation">@null</item>
        <item name="android:taskCloseEnterAnimation">@null</item>
        <item name="android:taskCloseExitAnimation">@null</item>
        <item name="android:taskToFrontEnterAnimation">@null</item>
        <item name="android:taskToFrontExitAnimation">@null</item>
        <item name="android:taskToBackEnterAnimation">@null</item>
        <item name="android:taskToBackExitAnimation">@null</item>
    </style>

    <style name="NoTitleTranslucentTheme" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/transparent99</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="no_title" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>



    <!--底部弹出菜单-->
    <style name="AnimationBottomFade">
        <item name="android:windowEnterAnimation">@anim/in_bottomtotop</item>
        <item name="android:windowExitAnimation">@anim/out_toptobottom</item>
    </style>
    <!--设置中间弹出PopupWindow的动画-->
    <style name="anim_popup_centerbar">
        <item name="android:windowEnterAnimation">@anim/popup_centerbar_in</item>
        <item name="android:windowExitAnimation">@anim/popup_centerbar_out</item>
    </style>

    <style name="AnimationRightFade">
        <item name="android:windowEnterAnimation">@anim/in_righttoleft</item>
        <item name="android:windowExitAnimation">@anim/out_lefttoright</item>
    </style>

    <style name="Button_Success">
        <item name="android:layout_width">670px</item>
        <item name="android:layout_height">80px</item>
        <item name="android:background">@drawable/createroom_success</item>
        <item name="android:textSize">34px</item>
        <item name="android:textColor">#fff</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="Button_faild">
        <item name="android:layout_width">702px</item>
        <item name="android:layout_height">88px</item>
        <item name="android:background">@drawable/edittextrectanglenext2</item>
        <item name="android:textSize">34px</item>
        <item name="android:textColor">#333</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="Line_BG">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@drawable/view4line</item>
    </style>

    <style name="Fragment_Head">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">130px</item>
        <item name="android:background">#fafbfd</item>
        <item name="android:textSize">36px</item>
        <item name="android:paddingTop">68px</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">#333333</item>
    </style>

    <style name="EditText_Style">
        <item name="android:layout_height">88px</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/edittextrectangle</item>
        <item name="android:paddingLeft">24px</item>
    </style>

    <style name="Button_wallet">
        <item name="android:layout_width">480px</item>
        <item name="android:layout_height">88px</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textSize">34px</item>
        <item name="android:textColor">#fff</item>
    </style>

    <style name="Setting_Item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">82px</item>
        <item name="android:background">@drawable/edittextrectangle</item>
    </style>
    <style name="Setting_Item_Name">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">82px</item>
        <item name="android:background">@drawable/edittextrectangle</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="Arrow_right">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginRight">24px</item>
    </style>

    <style name="Setting_Item_Icon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">24px</item>
    </style>

    <style name="Setting_Item_Describe">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">30px</item>
        <item name="android:textColor">#000</item>
        <item name="android:textSize">30px</item>
    </style>

    <!--五个圈圈选择框-->
    <style name="rb_friend_list_chat_fmt">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">0dp</item>
    </style>

    <style name="TextView_28px">
        <item name="android:textColor">#fff</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">28px</item>
    </style>

    <!-- 这个是加入的代码 -->
    <style name="mypopwindow_anim_style">
        <item name="android:windowEnterAnimation">@anim/popshow_anim</item>
        <!-- 指定显示的动画xml -->

        <item name="android:windowExitAnimation">@anim/pophidden_anim</item>
        <!-- 指定消失的动画xml -->


    </style>

    <style name="TextViewAdapter">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">28px</item>
        <item name="android:textColor">#808080</item>
    </style>

    <style name="RoomInfo_TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">28px</item>
        <item name="android:textColor">#808080</item>
    </style>


    <style name="TextView_CircleTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#333</item>
        <item name="android:textSize">30px</item>
    </style>

    <style name="TextView_CircleContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16px</item>
        <item name="android:textSize">24px</item>
        <item name="android:textColor">#808080</item>
    </style>

    <style name="MyTableLayout">
        <item name="tabIndicatorColor">#03b5e3</item>
        <item name="tabSelectedTextColor">#03b5e3</item>
        <item name="tabTextColor">#b8b8b8</item>
        <item name="android:textSize">30px</item>
    </style>

    <style name="POP_Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">88px</item>
        <item name="android:background">@drawable/edittextrectangle</item>
    </style>


    <style name="TextView_2Title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:lines">1</item>
        <item name="android:textColor">#808080</item>
        <item name="android:textSize">30px</item>
    </style>

    <style name="item_msg_avatar_gamechatroom">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_width">45dp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_height">45dp</item>
    </style>

    <style name="item_msg_text_gamechatroom">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="avatar_bg_home_rooms">
        <item name="android:layout_width">48px</item>
        <item name="android:layout_height">48px</item>
    </style>

    <style name="avatar_home_rooms">
        <item name="android:padding">1dp</item>
        <item name="android:layout_width">48px</item>
        <item name="android:layout_height">48px</item>
    </style>

    <style name="avatar_bg_no2_home_rooms">
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:layout_width">48px</item>
        <item name="android:layout_height">48px</item>
    </style>

    <style name="avatar_no2_home_rooms">
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:padding">1dp</item>
        <item name="android:layout_width">48px</item>
        <item name="android:layout_height">48px</item>
    </style>


</resources>
