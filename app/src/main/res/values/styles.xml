<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Theme" parent="AppTheme">
        <item name="android:windowAnimationStyle">@style/noAnimation</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    <!-- 选择照片底部弹出层 -->
    <!--    <style name="PopupAnimation" parent="android:Animation">
            <item name="android:windowEnterAnimation">@anim/push_bottom_in</item>
            <item name="android:windowExitAnimation">@anim/push_bottom_out</item>
        </style>-->
    <style name="noAnimation">
        <item name="android:activityOpenEnterAnimation">@null</item>
        <item name="android:activityOpenExitAnimation">@null</item>
        <item name="android:activityCloseEnterAnimation">@null</item>
        <item name="android:activityCloseExitAnimation">@null</item>
        <item name="android:taskOpenEnterAnimation">@null</item>
        <item name="android:taskOpenExitAnimation">@null</item>
        <item name="android:taskCloseEnterAnimation">@null</item>
        <item name="android:taskCloseExitAnimation">@null</item>
        <item name="android:taskToFrontEnterAnimation">@null</item>
        <item name="android:taskToFrontExitAnimation">@null</item>
        <item name="android:taskToBackEnterAnimation">@null</item>
        <item name="android:taskToBackExitAnimation">@null</item>
    </style>

    <!-- 状态栏 -->
    <style name="MyToolBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">?colorPrimary</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="colorControlActivated">@android:color/white</item>
    </style>

    <!-- 对话框 -->
    <style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@color/android:transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    <!--底部弹出菜单-->
    <style name="AnimationBottomFade">
        <item name="android:windowEnterAnimation">@anim/in_bottomtotop</item>
        <item name="android:windowExitAnimation">@anim/out_toptobottom</item>
    </style>
    <!--设置中间弹出PopupWindow的动画-->
    <style name="anim_popup_centerbar">
        <item name="android:windowEnterAnimation">@anim/popup_centerbar_in</item>
        <item name="android:windowExitAnimation">@anim/popup_centerbar_out</item>
    </style>

    <style name="AnimationRightFade">
        <item name="android:windowEnterAnimation">@anim/in_righttoleft</item>
        <item name="android:windowExitAnimation">@anim/out_lefttoright</item>
    </style>

    <style name="Button_Success">
        <item name="android:layout_width">702px</item>
        <item name="android:layout_height">88px</item>
        <item name="android:background">@drawable/edittextrectanglenext</item>
        <item name="android:textSize">34px</item>
        <item name="android:textColor">#fff</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="Button_faild">
        <item name="android:layout_width">702px</item>
        <item name="android:layout_height">88px</item>
        <item name="android:background">@drawable/edittextrectanglenext2</item>
        <item name="android:textSize">34px</item>
        <item name="android:textColor">#333</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="Line_BG">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@drawable/view4line</item>
    </style>

    <style name="Fragment_Head">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">130px</item>
        <item name="android:background">#fafbfd</item>
        <item name="android:textSize">36px</item>
        <item name="android:paddingTop">68px</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">#333333</item>
    </style>

    <style name="EditText_Style">
        <item name="android:layout_height">88px</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/edittextrectangle</item>
        <item name="android:paddingLeft">24px</item>
    </style>

    <style name="Button_wallet">
        <item name="android:layout_width">480px</item>
        <item name="android:layout_height">88px</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textSize">34px</item>
        <item name="android:textColor">#fff</item>
    </style>

    <style name="Setting_Item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">88px</item>
        <item name="android:background">@drawable/edittextrectangle</item>
    </style>
    <style name="Setting_Item_Name">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">88px</item>
        <item name="android:background">@drawable/edittextrectangle</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="Arrow_right">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginRight">24px</item>
    </style>

    <style name="Setting_Item_Icon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">24px</item>
    </style>

    <style name="Setting_Item_Describe">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">30px</item>
        <item name="android:textColor">#000</item>
        <item name="android:textSize">30px</item>
    </style>

    <!--五个圈圈选择框-->
    <style name="rb_friend_list_chat_fmt">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextView_28px">
        <item name="android:textColor">#fff</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">28px</item>
    </style>

    <!-- 这个是加入的代码 -->
    <style name="mypopwindow_anim_style">
        <item name="android:windowEnterAnimation">@anim/popshow_anim</item>
        <!-- 指定显示的动画xml -->

        <item name="android:windowExitAnimation">@anim/pophidden_anim</item>
        <!-- 指定消失的动画xml -->


    </style>

    <style name="TextViewAdapter">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">28px</item>
        <item name="android:textColor">#808080</item>
    </style>


</resources>
